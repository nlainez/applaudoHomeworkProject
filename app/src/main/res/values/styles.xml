<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat">
        <item name="colorPrimary">@color/nfl_blue_1</item>
    </style>

    <style name="PrimaryLargeTitle" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/nfl_blue_1</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingTop">@dimen/activity_vertical_margin_large</item>
        <item name="android:textSize">24sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="SecondayLargeTitle" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/nfl_blue_3</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingTop">@dimen/activity_vertical_margin_large</item>
        <item name="android:paddingBottom">@dimen/activity_vertical_margin</item>
        <item name="android:textSize">24sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="SubTitle" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/nfl_black_2</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="ListTitle" parent="@android:style/TextAppearance">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="ListSubtitle" parent="@android:style/TextAppearance">
        <item name="android:textSize">14sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

</resources>
